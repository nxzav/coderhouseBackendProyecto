<h1>Cart list</h1>
<div class='cart'>
  <h1>Cart: {{cart._id}}</h1>
  {{#each cart.products}}
    <div class='cart__single-product'>
      <img class='cart__product-image' src="{{ product.thumbnails }}" alt='' />
      <div class='cart__info'>
        <b>{{product.title}}</b>
        <span>{{product.description}}</span>
        <span>Qty: {{quantity}}</span>
        <b> ${{product.price}}</b>
      </div>
    </div>
  {{/each}}
  <a href='/carts/{{cart._id}}'>
    <button class='cart__btn'>Go to cart</button>
  </a>
</div>